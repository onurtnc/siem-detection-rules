(index=proxy OR index=network OR index=pan*)
method=POST
(uri="*.php*" OR url="*.php*")
(bytes_out>50000 OR bytes>50000 OR sent_bytes>50000 OR http_content_length>50000)
| eval dest=coalesce(dest_domain, domain, host, dest_host, dest)
| stats count AS hits
        min(_time) AS first_seen
        max(_time) AS last_seen
        values(uri) AS uris
        values(dest) AS destinations
        by src_ip, dest_ip, user
| where hits >= 1
| convert ctime(first_seen) ctime(last_seen)
| sort -hits
